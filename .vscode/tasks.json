{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Innie Scheduler (GCC)",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/vendor/cjson",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/vendor/cjson/cJSON.c",
                "-o",
                "${workspaceFolder}/build/innie-scheduler.exe",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}